<%- include("header")-%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account page</title>
    <style>
        .post-div{
            padding: 50px;
           
        }
    </style>
</head>

    
    <div class="event">
        <div class="container">
            <div class="section-header text-center">
                <p>Your Posts</p>
                <h2>Thank you for your donation</h2>
                
            </div>
            <div class="row">
                    
                    <%posts.forEach(function(post){%>
                        <div class="col-lg-6">
                            <div class="event-item">
                                <h1 hidden><%=post.id%></h1>
                                <img src="/donor-images/<%=post.image%>" height=400 width=690 alt="Image">
                                <div class="event-content">
                                    <div class="event-meta">
                                        <p><i class="fa fa-calendar-alt"></i><%=post.datetime%></p>
                                        <!-- <p><i class="far fa-clock"></i>8:00 - 10:00</p> -->
                                        <p><i class="fa fa-map-marker-alt"></i><%=post.location%></p>
                                        <p><i class="fa fa-map-marker-alt"></i><%=post.address%></p>
                                    </div>
                                    <div class="event-text">
                                        <h5> Username : <%=post.name%></h5>
                                        <h5> Phone no : <%=post.number%></h5>
                                        
                                        <h3>Food Packet Donation</h3>
                                        <div class="col-lg-6" style="word-wrap: break-word;height: 100px;overflow: auto;">
                                            <p>
                                                <%=post.description%>
                                                
                                            </p>
                                            
                                        </div>
                                        <h5> No of people : <%=post.people%></h5>
                                        <h5> Claims : </h5>
                                        <div class="col-lg-12" style="word-wrap: break-word;height: 100px;overflow: auto;width: 300px;">
                                            <%claims.forEach(function(claim) {%>
                                                <%if(claim.id==post.id){%>
                                                    
                                                    <hr>
                                                    <h5><%=claim.name%></h3>
                                                        <a class="btn btn-custom" value="SUBMIT EMAIL TO:" href="mailto:<%=claim.email%>>">Email</a>
                                                <%}%>
                                            <%})%>
                                            
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                             <!-- to delete the post -->
                <form action="/auth/account" method="POST">
                    <input hidden type="text" name="idbutton" value="<%=post.id%>">
                    <button class="btn btn-custom" type="submit" >Delete</button>
                </form>
                        </div>
                        <%});%>
                    
                
            </div>
        </div>
    </div>
    
</body>
<%- include("footer")-%>
</html>